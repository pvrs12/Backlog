<Window x:Class="Backlog.CompletionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Completed Task" Height="105" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Actual Time Spent" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox Name="TimeSpentTextBox" Grid.Row="0" Grid.Column="1" Margin="5" PreviewTextInput="TimeSpentTextBox_PreviewTextInput"/>
        <Button Name="OkayButton" Content="OK" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Click="OkayButton_Click"/>
    </Grid>
</Window>
